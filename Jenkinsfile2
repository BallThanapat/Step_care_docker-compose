pipeline {
    agent any

    environment {
        GCP_INSTANCE = '35.240.251.53'     // IP ของ Google Cloud Instance ที่จะ deploy
        SSH_USER = 'nut59607'            // ชื่อผู้ใช้ที่ใช้ SSH
	REMOTE_HOST = 'nut59607@35.240.251.53'
        SSH_CREDENTIALS = 'ssh_instance'  // ใช้ Jenkins credentials สำหรับ SSH key
    }

    stages {
        stage('Checkout Code') {
            steps {
                // ดึงโค้ดจาก GitHub repository
                git branch: 'main', url: 'https://github.com/BallThanapat/Step_care_docker-compose.git'
            }
        }

        stage('Build and Push Docker Images') {
            steps {
                // สร้าง Docker images สำหรับ frontend และ backend
                script {
                    dir('Frontend') {
                        sh 'docker build -t frontend-image .'
                    }
                    dir('Backend') {
                        sh 'docker build -t backend-image .'
                    }
                }
            }
        }

        stage('Deploy to GCP Instance') {
            steps {
                // SSH ไปที่ GCP Instance และรัน docker-compose บนเครื่องนั้น
                sshagent([SSH_CREDENTIALS]) {
                    sh "ssh -o StrictHostKeyChecking=no $REMOTE_HOST 'ls -la'"
                    sh "ssh -o StrictHostKeyChecking=no $REMOTE_HOST 'cd Step_care_docker-compose'"
                    sh "ssh -o StrictHostKeyChecking=no $REMOTE_HOST 'docker stop $(docker ps -a -q) 2>/dev/null || true'"
                    sh "ssh -o StrictHostKeyChecking=no $REMOTE_HOST 'docker rm $(docker ps -a -q) 2>/dev/null || true'"
                    sh "ssh -o StrictHostKeyChecking=no $REMOTE_HOST 'docker rmi $(docker images -q) 2>/dev/null || true'"
                    sh "ssh -o StrictHostKeyChecking=no $REMOTE_HOST 'docker volume rm $(docker volume ls -q) 2>/dev/null || true'"
                    sh "ssh -o StrictHostKeyChecking=no $REMOTE_HOST 'docker network prune -f 2>/dev/null || true'"
                    sh "ssh -o StrictHostKeyChecking=no $REMOTE_HOST 'docker compose pull'"
                    sh "ssh -o StrictHostKeyChecking=no $REMOTE_HOST 'docker compose up -d --build'"
                }
            }
        }
    }

    post {
        always {
            // Cleanup Docker images บน Jenkins
            sh 'docker image prune -f'
        }
    }
}
